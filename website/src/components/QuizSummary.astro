---
import QuizCard from './QuizCard.astro';

interface QuizData {
  id: string;
  title: string;
  description: string;
  questions: { id: string }[];
}

const quizModules = import.meta.glob<{ default: QuizData }>('../data/quizzes/*.json', {
  eager: true,
});

const orderPrefixes = [
  'principes-et-valeurs',
  'systeme-institutionnel',
  'droits-et-devoirs',
  'histoire-geographie-culture',
  'vivre-en-france',
  'csp-principes-et-valeurs',
  'csp-systeme-institutionnel',
  'csp-droits-et-devoirs',
  'csp-histoire-geographie-culture',
  'csp-vivre-en-france',
  'csp-mise-en-situation',
  'cr-principes-et-valeurs',
  'cr-systeme-institutionnel',
  'cr-droits-et-devoirs',
  'cr-mise-en-situation',
];

const allQuizzes = Object.values(quizModules)
  .map((mod) => {
    const data = mod.default;
    return { data, href: `/quiz/${data.id}/` };
  })
  .sort((a, b) => {
    const aIdx = orderPrefixes.indexOf(a.data.id);
    const bIdx = orderPrefixes.indexOf(b.data.id);
    return (aIdx === -1 ? 999 : aIdx) - (bIdx === -1 ? 999 : bIdx);
  });

const thematicQuizzes = allQuizzes.filter(
  (q) => !q.data.id.startsWith('csp-') && !q.data.id.startsWith('cr-'),
);
const cspQuizzes = allQuizzes.filter((q) => q.data.id.startsWith('csp-'));
const crQuizzes = allQuizzes.filter((q) => q.data.id.startsWith('cr-'));
const total = allQuizzes.length;
---

<div class="quiz-summary" data-total={total}>
  <div class="quiz-summary-header">
    <div class="quiz-summary-progress">
      <span class="quiz-summary-progress-text" id="summary-progress-text">Progression : chargement...</span>
      <div class="quiz-summary-progress-bar">
        <div class="quiz-summary-progress-fill" id="summary-progress-fill"></div>
      </div>
    </div>
    <div class="quiz-summary-actions">
      <a class="quiz-summary-slides-link" href="/slides/">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="3" width="20" height="14" rx="2"/><path d="M8 21h8M12 17v4"/></svg>
        Mode slides
      </a>
      <button class="quiz-summary-reset" id="summary-reset" type="button">Réinitialiser</button>
    </div>
  </div>

  <div class="quiz-card-list">
    <h3 class="quiz-section-title">Quiz thématiques</h3>
    {thematicQuizzes.map(({ data, href }) => (
      <QuizCard
        quizId={data.id}
        title={data.title}
        description={data.description}
        questionCount={data.questions.length}
        href={href}
      />
    ))}

    {cspQuizzes.length > 0 && (
      <>
        <h3 class="quiz-section-title">Quiz officiels CSP</h3>
        <p class="quiz-section-description">
          Questions officielles de l'examen de connaissance du <strong>Contrat de S&eacute;jour Pluriannuel (CSP)</strong>.
          <a href="https://formation-civique.interieur.gouv.fr/examen-civique/liste-officielle-des-questions-de-connaissance-csp/" target="_blank" rel="noopener">Voir la liste officielle</a>
        </p>
        {cspQuizzes.map(({ data, href }) => (
          <QuizCard
            quizId={data.id}
            title={data.title}
            description={data.description}
            questionCount={data.questions.length}
            href={href}
          />
        ))}
      </>
    )}

    {crQuizzes.length > 0 && (
      <>
        <h3 class="quiz-section-title">Quiz officiels CR</h3>
        <p class="quiz-section-description">
          Questions officielles de l'examen de connaissance de la <strong>Carte de R&eacute;sident (CR)</strong>.
          <a href="https://formation-civique.interieur.gouv.fr/examen-civique/liste-officielle-des-questions-de-connaissance-cr/" target="_blank" rel="noopener">Voir la liste officielle</a>
        </p>
        {crQuizzes.map(({ data, href }) => (
          <QuizCard
            quizId={data.id}
            title={data.title}
            description={data.description}
            questionCount={data.questions.length}
            href={href}
          />
        ))}
      </>
    )}
  </div>
</div>

<script>
  import { getAllQuizResults, resetAllQuizzes } from '../utils/quizStorage';

  function updateProgress() {
    const results = getAllQuizResults();
    const completed = results.length;
    const summaryEl = document.querySelector('.quiz-summary') as HTMLElement | null;
    const total = parseInt(summaryEl?.dataset?.total || '0', 10);
    const progressText = document.getElementById('summary-progress-text');
    const progressFill = document.getElementById('summary-progress-fill');

    if (progressText) {
      progressText.textContent = `Progression : ${completed} / ${total} quiz terminé${completed > 1 ? 's' : ''}`;
    }
    if (progressFill) {
      progressFill.style.width = `${(completed / total) * 100}%`;
    }
  }

  function init() {
    const resetBtn = document.getElementById('summary-reset');
    if (resetBtn) {
      resetBtn.addEventListener('click', () => {
        if (confirm('Voulez-vous vraiment réinitialiser tous vos résultats de quiz ?')) {
          resetAllQuizzes();
          window.location.reload();
        }
      });
    }

    updateProgress();
  }

  // Ensure DOM is ready before updating progress
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>

<style>
  .quiz-summary {
    max-width: 700px;
  }

  .quiz-summary-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: 1rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .quiz-summary-progress {
    flex: 1;
    min-width: 200px;
  }

  .quiz-summary-progress-text {
    font-size: 0.9rem;
    color: var(--sl-color-gray-3);
    display: block;
    margin-bottom: 0.5rem;
  }

  .quiz-summary-progress-bar {
    height: 8px;
    background: var(--sl-color-gray-6);
    border-radius: 4px;
    overflow: hidden;
  }

  .quiz-summary-progress-fill {
    height: 100%;
    background: var(--sl-color-accent);
    border-radius: 4px;
    transition: width 0.3s ease;
  }

  .quiz-summary-actions {
    display: flex;
    gap: 0.5rem;
    align-items: flex-end;
    flex-wrap: wrap;
  }

  .quiz-summary-slides-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.4rem 1rem;
    border: 2px solid var(--sl-color-gray-5);
    border-radius: 6px;
    background: transparent;
    color: var(--sl-color-text);
    font-size: 0.85rem;
    text-decoration: none;
    transition: border-color 0.2s, color 0.2s;
  }

  .quiz-summary-slides-link:hover {
    border-color: var(--sl-color-accent);
    color: var(--sl-color-accent);
  }

  .quiz-summary-reset {
    padding: 0.4rem 1rem;
    border: 2px solid var(--sl-color-gray-5);
    border-radius: 6px;
    background: transparent;
    color: var(--sl-color-text);
    font-size: 0.85rem;
    cursor: pointer;
    transition: border-color 0.2s;
  }

  .quiz-summary-reset:hover {
    border-color: #dc2626;
    color: #dc2626;
  }

  .quiz-card-list {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .quiz-section-title {
    margin: 1rem 0 0.3rem;
    font-size: 1rem;
    color: var(--sl-color-gray-2);
    border-bottom: 1px solid var(--sl-color-gray-6);
    padding-bottom: 0.3rem;
  }

  .quiz-section-title:first-child {
    margin-top: 0;
  }

  .quiz-section-description {
    font-size: 0.85rem;
    color: var(--sl-color-gray-3);
    margin: 0 0 0.5rem;
    line-height: 1.4;
  }

  .quiz-section-description a {
    color: var(--sl-color-accent);
    text-decoration: underline;
  }
</style>
