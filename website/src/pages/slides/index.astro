---
import SlideLayout from '../../layouts/SlideLayout.astro';

const quizModules = import.meta.glob('../../data/quizzes/*.json', { eager: true });

interface QuizData {
  id: string;
  title: string;
  description: string;
  questions: unknown[];
}

const quizzes: QuizData[] = Object.values(quizModules).map(
  (mod: any) => mod.default ?? mod
);

// Group quizzes
const thematic = quizzes.filter(
  (q) => !q.id.startsWith('csp-') && !q.id.startsWith('cr-')
);
const csp = quizzes.filter((q) => q.id.startsWith('csp-'));
const cr = quizzes.filter((q) => q.id.startsWith('cr-'));
---

<SlideLayout title="Quiz Slides" description="Presentations des quiz de formation civique">
  <div class="slides-index">
    <header class="slides-hero">
      <a href="/" class="back-link">&larr; Retour au site</a>
      <h1>Quiz Slides</h1>
      <p>Choisissez un quiz pour lancer la presentation en mode diaporama</p>
    </header>

    <main class="slides-grid-container">
      <section>
        <h2 class="section-title">Quiz thematiques</h2>
        <div class="slides-grid">
          {thematic.map((quiz) => (
            <a href={`/slides/${quiz.id}/`} class="slide-card">
              <div class="slide-card-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <rect x="2" y="3" width="20" height="14" rx="2" />
                  <path d="M8 21h8M12 17v4" />
                </svg>
              </div>
              <h3>{quiz.title}</h3>
              <p class="slide-card-count">{quiz.questions.length} questions</p>
            </a>
          ))}
        </div>
      </section>

      {csp.length > 0 && (
        <section>
          <h2 class="section-title">Quiz officiels CSP</h2>
          <div class="slides-grid">
            {csp.map((quiz) => (
              <a href={`/slides/${quiz.id}/`} class="slide-card slide-card-csp">
                <div class="slide-card-icon">
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="2" y="3" width="20" height="14" rx="2" />
                    <path d="M8 21h8M12 17v4" />
                  </svg>
                </div>
                <h3>{quiz.title}</h3>
                <p class="slide-card-count">{quiz.questions.length} questions</p>
              </a>
            ))}
          </div>
        </section>
      )}

      {cr.length > 0 && (
        <section>
          <h2 class="section-title">Quiz officiels CR</h2>
          <div class="slides-grid">
            {cr.map((quiz) => (
              <a href={`/slides/${quiz.id}/`} class="slide-card slide-card-cr">
                <div class="slide-card-icon">
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="2" y="3" width="20" height="14" rx="2" />
                    <path d="M8 21h8M12 17v4" />
                  </svg>
                </div>
                <h3>{quiz.title}</h3>
                <p class="slide-card-count">{quiz.questions.length} questions</p>
              </a>
            ))}
          </div>
        </section>
      )}
    </main>
  </div>
</SlideLayout>

<style>
  .slides-index {
    min-height: 100vh;
    overflow-y: auto;
    padding: 2rem;
  }

  .slides-hero {
    text-align: center;
    padding: 3rem 1rem 2rem;
  }

  .back-link {
    display: inline-block;
    color: #94a3b8;
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: #e2e8f0;
  }

  .slides-hero h1 {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #818cf8, #c084fc);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.75rem;
  }

  .slides-hero p {
    color: #94a3b8;
    font-size: 1.1rem;
  }

  .slides-grid-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 1rem 0 3rem;
  }

  .section-title {
    font-size: 1.2rem;
    font-weight: 700;
    color: #cbd5e1;
    margin: 2.5rem 0 1rem;
    padding-left: 0.25rem;
  }

  .slides-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  .slide-card {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    text-decoration: none;
    color: #e2e8f0;
    transition: all 0.2s;
  }

  .slide-card:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: #818cf8;
    transform: translateY(-2px);
  }

  .slide-card-csp:hover {
    border-color: #22d3ee;
  }

  .slide-card-cr:hover {
    border-color: #34d399;
  }

  .slide-card-icon {
    color: #818cf8;
  }

  .slide-card-csp .slide-card-icon {
    color: #22d3ee;
  }

  .slide-card-cr .slide-card-icon {
    color: #34d399;
  }

  .slide-card h3 {
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.4;
  }

  .slide-card-count {
    font-size: 0.85rem;
    color: #64748b;
  }

  @media (max-width: 600px) {
    .slides-hero h1 {
      font-size: 1.8rem;
    }

    .slides-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
